{
    "name": "sparkit",
    "version": "3.0.0",
    "description": "SPAR: Structured Persona-Argumentation for Reasoning â€” Run AI persona debates from the command line",
    "type": "module",
    "main": "cli/index.js",
    "bin": {
        "spar": "./cli/index.js",
        "sparkit": "./cli/index.js"
    },
    "scripts": {
        "start": "node cli/index.js",
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
        "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
        "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
        "test:verbose": "node --experimental-vm-modules node_modules/jest/bin/jest.js --verbose"
    },
    "keywords": [
        "spar",
        "sparkit",
        "ai",
        "debate",
        "decision-making",
        "personas",
        "reasoning",
        "openai",
        "anthropic",
        "gemini",
        "ollama",
        "local-llm",
        "cli",
        "llm"
    ],
    "author": "Naveen Riaz Mohamed Kani",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/synthanai/spar-kit.git"
    },
    "homepage": "https://synthanai.github.io/spar-kit",
    "bugs": {
        "url": "https://github.com/synthanai/spar-kit/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "files": [
        "cli/",
        "README.md",
        "LICENSE",
        "CHANGELOG.md"
    ],
    "dependencies": {
        "chalk": "^5.3.0",
        "commander": "^12.0.0",
        "inquirer": "^9.2.0",
        "ora": "^8.0.0"
    },
    "devDependencies": {
        "@testing-library/dom": "^10.0.0",
        "@testing-library/jest-dom": "^6.0.0",
        "jest": "^29.7.0",
        "jsdom": "^24.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/__tests__/**/*.test.js"
        ],
        "collectCoverageFrom": [
            "cli/**/*.js",
            "spar.js",
            "!**/node_modules/**"
        ],
        "coverageDirectory": "coverage",
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ],
        "verbose": true,
        "moduleFileExtensions": [
            "js",
            "json"
        ],
        "transform": {}
    }
}